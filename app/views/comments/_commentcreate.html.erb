<div class="modal fade myModal" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static" data-keyboard="false">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Comment box for album</h4>
      </div>
      <div class="modal-body">
        <div id="part">
          <%= form_for @comment, remote: true, method: "post", url: {action: "create"} , html: {class: "form-horizontal newalbum col-sm-offset-2"} do |f| %>
            <div class="field form-group">
              <%= f.label :comment, class: 'col-sm-2 control-label' %>
              <div class="col-sm-4">
                <%= f.text_area :comment, class: 'form-control', required: true, col: "10", row: "5" %>
                <% if @check_user_album.blank? %>
                  <%= f.hidden_field :active, :value => 'false' %>
                <% else %>
                  <%= f.hidden_field :active, :value => 'true' %>
                <% end %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
              </div>
            </div>
            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />          
            <div class="form-group action">        
              <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "submit", class: "btn log btn-default", id: "data_submit" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
