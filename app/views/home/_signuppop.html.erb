<h2>Signup Here</h2>     
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {multipart: :true}) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-horizontal formpop ">  
    <div class="field form-group">
      <%= f.label :firstname, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :fname, class: 'form-control e2', required: true, autofocus: true %>
      </div>
    </div>
    <div class="field form-group">
      <%= f.label :lastname, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :lname, class: 'form-control e2', required: true, autofocus: true %>
      </div>
    </div>
    <div class="field form-group">
      <%= f.label :contact, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.text_field :contact, class: 'form-control e2', required: true, autofocus: true %>
      </div>
    </div>
    <div class="field form-group">
      <%= f.label :email, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.email_field :email, class: 'form-control e2', required: true, autofocus: true %>
      </div>
    </div>
    <div class="field form-group">
      <%= f.label :password, class: 'col-sm-3 control-label' %>
       <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      <div class="col-sm-7">
        <%= f.password_field :password, class: 'form-control e2', required: true, autofocus: true %>
      </div>
    </div>
    <div class="field form-group">
      <%= f.label :password_confirmation, class: 'col-sm-3 control-label' %>
      <div class="col-sm-7">
        <%= f.password_field :password_confirmation, class: 'form-control e2', required:true, autofocus: true %>
      </div>
    </div>
     <div class="form-group action">        
        <div class="col-sm-offset-3 col-sm-6">
          <%= f.submit "Signup", class:"btn log1 btn-success" %>
        </div>
      </div>
    <div class="field form-group">
      <%= f.label :profile_pic, 'Profile Pic', class: 'col-sm-3 control-label' %>
      <div class="col-sm-4">
        <%= f.file_field :profile_pic %>
      </div>
  </div>
<% end %>  