<div id ="container"> 
  <div id="content">
    <ul id="picturelist">
      <% if @image.photo? %>
        <% @image = Image.where(params[:id]).each do |image| %>
          <li class="image_view">
            <%= image.img_name %>
            <%= image_tag image.photo_url() %>            
            <%= link_to new_album_image_path(:album_id) do %>    
              <span class="glyphicon glyphicon-open"></span>
            <% end %>
            <%= link_to edit_album_path(:id) do%>
              <span class="glyphicon glyphicon-edit"></span>
            <% end %>
            <%= link_to album_path(:id),:method => :delete , data: { confirm: 'Are you sure?' } do%>
              <span class="glyphicon glyphicon-remove"></span>  
            <% end %>            
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>