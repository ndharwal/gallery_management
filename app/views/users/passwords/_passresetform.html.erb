    <%= f.email_field :email, class: 'form-control', required: true %>
  </div>
</div> 
<div class="form-group action">        
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Send me reset password", class: 'btn sub btn-default' %>
  </div>
</div>